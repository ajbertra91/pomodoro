#body
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  height: 100vh
//handheld
@media only screen and (min-width: 320px)
  #main
    text-align: center
    font-family: Helvetica Neue, sans-serif
    padding: 10px
    max-width: 90%
    border-radius: 3px
    border: 2px solid $quoteBorderColor
//tablet
@media only screen and (min-width: 600px)
  #main
    flex: none
    align-self: center
    max-width: 90%
    padding: 30px
